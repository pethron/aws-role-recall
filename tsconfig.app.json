{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "rootDir": "src",
    "types": ["chrome"],
    "lib": ["DOM", "ES2022"],
    "forceConsistentCasingInFileNames": true,              
  },
  "files": [
    "src/main.ts",
    "src/background.ts",
  ],
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
